<div class="page-header">
  <h1>
    Emergency events
    <a href="/emergency_events/new" class="btn btn-lg btn-success">New Emergency event</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Emergency type</th>
        <th>Details</th>
        <th>Office</th>
        <th>Actions</th>
      </tr>

      <% @emergency_events.each do |emergency_event| %>
      <tr>
        <td><%= emergency_event.date %></td>
        <td><%= emergency_event.emergency_type_id %></td>
        <td><%= emergency_event.details %></td>
        <td><%= emergency_event.office_id %></td>
        <td>
          <a href="/emergency_events/<%= emergency_event.id %>" class="btn btn-primary">Show</a>
          <a href="/emergency_events/<%= emergency_event.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_emergency_event/<%= emergency_event.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
