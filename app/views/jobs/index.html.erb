<div class="page-header">
  <h1>
    Jobs
    <a href="/jobs/new" class="btn btn-lg btn-success">New Job</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Details</th>
        <th>Fte utilization</th>
        <th>Staff member</th>
        <th>ID</th>
        <th>Actions</th>
      </tr>

      <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.details %></td>
        <td><%= job.fte_utilization %></td>
        <td><%= job.staff_member.name %></td>
        <td><%= job.id %></td>
        <td>
          <a href="/jobs/<%= job.id %>" class="btn btn-primary">Show</a>
          <a href="/jobs/<%= job.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_job/<%= job.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
