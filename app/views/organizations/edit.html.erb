<!-- Validation failure messages -->
<% if @organization.errors.any? %>
  <% @organization.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit <%= @organization.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_organization/<%= @organization.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <textarea id="name" name="name" placeholder="Name" class="form-control" rows="3"><%= @organization.name %></textarea>
      </div>

      <!-- Label and input for details -->
      <div class="form-group">
        <label for="details" class="control-label">
          Details
        </label>

        <textarea id="details" name="details" placeholder="Details" class="form-control" rows="3"><%= @organization.details %></textarea>
      </div>

      <button class="btn btn-warning">
        Update Organization
      </button>
      or
      <a href="/organizations/<%= @organization.id %>">Cancel</a>
    </form>
  </div>
</div>
